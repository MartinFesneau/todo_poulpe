<div>
  <%= simple_form_for([task, comment], remote: true) do |f| %>
  <div class="form-group mb-0">
    <%= f.input :content, label: false, placeholder: "Add a new comment", class:"form-control" %>
    <div class="custom-file">
    <%= f.input :comment_file, as: :file, label: false, class:"custom-file-label" %>
    </div>
    <%= f.submit "Submit", class: "btn btn-primary mt-2" %>
  <% end %>
  </div>
</div>