<div class="task-card" id="task-<%= task.id %>" >
  <div class="main-content">
    <div class="cont-left">
    <div class="task-status">
      <% if task.done %>
        <i class="fas fa-check-circle done" data-id="<%= task.id %>"></i>
      <% else %>
        <i class="fas fa-check-circle" data-id="<%= task.id %>"></i>
      <% end %>
    </div>
      <p class="strong"><%= task.description %></p>
      <p>Priority: <%= task.priority %></p>
    </div>
    <div class="cont-right">
      <div class="deadline">
        <i class="far fa-clock"></i> <span class="small"><%= format_deadline(task.deadline) %></span>
      </div>
      <div class="actions">
        <div class="comment-icon">
          <i class="fas fa-comment-alt"></i> <%= task.comments.size %>
        </div>
        <%# <div class="edit-task">
          <i class="fas fa-pen"></i>
        </div> %>
        <div class="delete">
        <%= link_to task_path(task),
                  method: :delete,
                  remote: true,
                  :data => { :confirm => "Are you sure you want to delete the task '#{task.description}' ?" } do %>
                    <i class="fas fa-trash"></i>
                  <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="comments-cont d-none">
    <div class="comments">
      <% task.comments.each do |comment| %>
        <%= render "comments/comment", comment: comment %>
      <% end %>
    <div class="comments-form ">
      <%= render "comments/comment_form", task: task, comment: Comment.new %>
    </div>
    </div>
  </div>
</div>

